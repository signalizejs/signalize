{
  "private": "true",
  "description": "A functional core for SignalizeJS framework.",
  "keywords": [
    "signalizejs",
    "signalize",
    "ui",
    "reactive",
    "components",
    "performance",
    "front-end",
    "framework",
    "web"
  ],
  "type": "module",
  "scripts": {
    "repo:init": "npm i -r && npm run repo:install-playwright",
    "repo:install-playwright": "npx playwright install --with-deps",
    "dev": "vite",
    "build": "rollup -c rollup.config.js",
    "preview": "vite preview",
    "eslint:check": "eslint src/**/*.ts",
    "eslint:fix": "npm eslint:check --fix",
    "tests:run": "npx playwright",
    "tests:report": "npx playwright show-report --host 0.0.0.0",
    "http-server:start": "http-server ./ -p 4000",
    "signalize:test": "npx --env PACKAGE=signalize playwright"
  },
  "author": "Vladimír Macháček",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-node-resolve": "^15.2",
    "@rollup/plugin-typescript": "^11.1",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.8",
    "eslint": "^8.5",
    "eslint-config-standard-with-typescript": "^39.0",
    "eslint-plugin-import": "^2.28",
    "eslint-plugin-n": "^16.2",
    "eslint-plugin-promise": "^6.1",
    "http-server": "^14.1",
    "rollup": "^4.1",
    "tslib": "^2.6",
    "typescript": "^5.2",
    "vite": "^4.3"
  },
  "workspaces": [
    "packages/signalizejs"
  ]
}
