{
	"name": "islandsjs",
	"version": "0.1.0",
	"description": "A microframework inspired by SolidJS and Svelte, designed to easily create optimized and interactive websites with minimal JavaScript.",
	"keywords": [
		"islandsjs",
		"islands",
		"ui",
		"reactive",
		"components",
		"performance",
		"front-end",
		"framework",
		"web"
	],
	"type": "module",
	"scripts": {
		"repo:init": "npm run repo:install-playwright && npm install",
		"repo:install-playwright": "npx playwright install --with-deps",
		"dev": "vite",
		"preview": "vite preview",
		"build": "rollup -c rollup.config.js",
		"lint": "",
		"tests:run": "npx playwright test",
		"tests:report": "npx playwright show-report --host 0.0.0.0"
	},
	"author": "Vladimír Macháček",
	"files": [
		"dist",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"exports": {
		".": {
			"import": "./dist/islands.js",
			"require": "./lib/islands.cjs",
			"types": "./dist/index.d.ts"
		},
		"./ajaxify": {
			"import": "./dist/ajaxify.js",
			"require": "./dist/ajaxify.cjs",
			"types": "./dist/ajaxify.d.ts"
		},
		"./core": {
			"import": "./dist/core.js",
			"require": "./dist/core.cjs",
			"types": "./dist/core.d.ts"
		},
		"./dialog": {
			"import": "./dist/dialog.js",
			"require": "./dist/dialog.cjs",
			"types": "./dist/dialog.d.ts"
		},
		"./h": {
			"import": "./dist/h.js",
			"require": "./dist/h.cjs",
			"types": "./dist/h.d.ts"
		},
		"./script-loader": {
			"import": "./dist/script-loader.js",
			"require": "./dist/script-loader.cjs",
			"types": "./dist/script-loader.d.ts"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/islands.cjs",
	"jsdelivr": "dist/islands.js",
	"unpkg": "dist/islands.js",
	"module": "dist/islands.js",
	"types": "dist/index.d.ts",
	"license": "MIT",
	"devDependencies": {
		"@playwright/test": "^1.35.0",
		"@rollup/plugin-commonjs": "^25.0.1",
		"@rollup/plugin-typescript": "^11.1.1",
		"rollup": "^3.25.0",
		"tslib": "^2.5.3",
		"vite": "^4.3"
	}
}
