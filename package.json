{
	"private": "true",
	"description": "A microframework inspired by SolidJS and Svelte, designed to easily create optimized and interactive websites with minimal JavaScript.",
	"keywords": [
		"signalizejs",
		"signalize",
		"ui",
		"reactive",
		"components",
		"performance",
		"front-end",
		"framework",
		"web"
	],
	"type": "module",
	"scripts": {
		"repo:init": "pnpm i -r && pnpm repo:install-playwright",
		"repo:install-playwright": "npx playwright install --with-deps",
		"dev": "vite",
		"build": "rollup -c rollup.config.js",
		"preview": "vite preview",
		"eslint:check": "eslint src/**/*.ts",
		"eslint:fix": "pnpm eslint:check --fix",
		"tests:run": "npx playwright test",
		"tests:report": "npx playwright show-report --host 0.0.0.0",
		"http-server:start": "http-server ./tests/pages -p 3000"
	},
	"author": "Vladimír Macháček",
	"devDependencies": {
		"@playwright/test": "^1.35.0",
		"@rollup/plugin-commonjs": "^25.0.1",
		"@rollup/plugin-typescript": "^11.1.1",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"eslint": "^8.42.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-standard-with-typescript": "^35.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"fast-glob": "^3.2.12",
		"http-server": "^14.1.1",
		"rollup": "^3.25.0",
		"solid-js": "^1.7.6",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3"
	}
}
